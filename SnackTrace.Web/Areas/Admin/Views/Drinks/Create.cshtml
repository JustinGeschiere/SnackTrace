@model SnackTrace.Web.Areas.Admin.Models.Drinks.CreateRenderModel;

@{
    ViewData["Title"] = "Drinks";
    var backLink = $"/Admin/Drinks/Index";
}

<h1>Add Drink</h1>

<br />
@using (Html.BeginForm("CreateConfirm", "Drinks", new { area = "Admin" }, FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(i => Model.Name)
        <input asp-for="Name" value="@Model.Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        @Html.LabelFor(i => Model.Price)
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" value="@Model.Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="button" class="btn btn-secondary" value="Back" onclick="@($"window.location.href='{backLink}'")" />
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
}

